@model Wallet.Core.ViewModels.Category.EditCategoryModel

@{
    ViewData["Title"] = "Edit category";
}

<div class="row justify-content-center">
    <h4 class="text-center">Edit</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <input asp-for="CategoryId" value="@Model.CategoryId" type="hidden"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-2 mb-2"/>
            </div>
        </form>
    </div>
    <hr/>
    <div class="text-center">
        <a type="button" class="btn btn-secondary m-2" asp-action="All">Back to List</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
