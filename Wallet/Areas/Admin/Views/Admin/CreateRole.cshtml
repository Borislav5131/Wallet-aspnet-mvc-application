@model Wallet.Core.ViewModels.Role.CreateRoleModel

@{
    ViewData["Title"] = "Create Role";
}

<h4 class="text-center">Create Role</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2 mb-2" />
                <a type="button" class="btn btn-outline-secondary float-end mt-2 mb-2" asp-action="AllRoles">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
